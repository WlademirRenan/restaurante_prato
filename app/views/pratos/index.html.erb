<p id="notice"><%= notice %></p>

<h2>Pratos</h2>

<br>

<%= link_to "<i class='fa fa-plus'></i> Cadastrar novo Prato".html_safe, new_prato_path, class: "btn btn-success white" %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="10%"></th>
      <th width="10%"></th>
      <th>Restaurante</th>
      <th>Prato</th>
      <th>Preço</th>
    </tr>
  </thead>

  <tbody>
    <% @pratos.each do |prato| %>
      <tr>
        <td><%= link_to "<i class='fa fa-times'></i>".html_safe, prato, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
        <td><%= link_to "<i class='fa fa-pencil'></i>".html_safe, edit_prato_path(prato) %></td>
        <td><%= prato.restaurante.descricao %></td>
        <td><%= prato.descricao %></td>
        <td><%= prato.preco %></td>
      </tr>
    <% end %>
  </tbody>
</table>
